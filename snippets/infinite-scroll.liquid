<div class="infinite-scroll__data visibility-hidden">
  <input dir="ltr" type="hidden" value="{{ next_url }}" data-next-url>
  <input dir="ltr" type="hidden" value="{{ count_pages }}" data-total-pages>
  <input dir="ltr" type="hidden" value="{{ current_page }}" data-current-page>
</div>
<span class="infinite-scroll__loading js-infinite-scroll">
  {%- render 'icon-loading' -%}
</span>